<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="textApperance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#B0ADADAD</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/colorAccentForcheckBox</item>
        <item name="android:buttonTint">@color/colorAccentForcheckBox</item>
    </style>

</resources>
